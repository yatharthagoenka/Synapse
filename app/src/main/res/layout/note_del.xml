<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/delDialog"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/note_del_dialog">

    <TextView
        android:id="@+id/textnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Delete Note"
        android:textColor="#dbdbdb"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/d2"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="9dp"
        android:background="#f28383"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textnew" />

    <TextView
        android:id="@+id/warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ubuntu"
        android:text="Are you sure you want to delete this note?"
        android:textColor="#d9d9d9"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d2" />


    <TextView
        android:id="@+id/delbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="right"
        android:text="DELETE"
        android:textColor="#ff5c5c"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/warn"
        app:layout_constraintTop_toBottomOf="@+id/warn" />

    <TextView
        android:id="@+id/cancelbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="#cfcfcf"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/delbutton"
        app:layout_constraintTop_toBottomOf="@+id/warn"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>