<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.AppTest">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Synapse"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTest">
        <activity android:name=".activities.createNote"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activities.notesMain"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".dashboard" /> <!-- <activity android:name=".cowinInfo" /> -->
        <activity
            android:name=".cowinActivity"
            android:label="@string/title_activity_cowin"
            android:theme="@style/Theme.AppTest.NoActionBar" />
        <activity
            android:name=".navActivity"
            android:label="@string/title_activity_nav"
            android:theme="@style/Theme.AppTest.NoActionBar" />
        <activity
            android:name=".cfActivity"
            android:label="@string/title_activity_cf"
            android:theme="@style/Theme.AppTest.NoActionBar" />
        <activity android:name=".SplashActivity" /> <!-- <activity android:name=".SplashAct"></activity> -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>